<apex:page Sidebar="false" showHeader="false" standardStylesheets="false" Controller="Login" docType="html-5.0">
    <html>
        <head>

              <c:Materialimport ></c:Materialimport>
 <c:MaterialNavbar ></c:MaterialNavbar>
        </head>
        <body class="login-page sidebar-collapse">
         <div class="page-header header-filter" style="background-image: url(https://dailyrhymes.com/wp-content/uploads/2020/03/5dd452486caa79e4d172de5b_unnamed-7.jpg); background-size: cover; background-position: top center;">
    <div class="container">
      <div class="row">
        <div class="col-lg-4 col-md-6 ml-auto mr-auto">
          <div class="card card-login">
      
              <div class="card-header card-header-primary text-center">
                <h4 class="card-title">Login</h4></div>
               <apex:form ><form>
               
                  <div class="form-group">
                   <span class="bmd-form-group"><div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">mail</i>
                    </span>
                  </div>
                  <apex:inputText value="{!email}"  styleClass="form-control" html-placeholder="Username/Email" />
                </div></span>
                     
                  </div>
                 <div class="form-group">
                      <span class="bmd-form-group"><div class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text">
                      <i class="material-icons">face</i>
                    </span>
                  </div>
   <apex:inputSecret value="{!password}" styleClass="form-control" html-placeholder="password" />
                </div></span>
                  </div>
                     
             
                  <div class="text-center">
                   <apex:commandButton action="{!save}" value="Login" styleClass="   btn btn-primary" id="theButton"/>
                 </div>
               </form>
               </apex:form>
            </div>
         </div>
      </div></div></div>
        </body>
</html>
</apex:page>
